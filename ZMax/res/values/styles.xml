<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowNoTitle">true</item>
        <item name="sdlDialogStyle">@style/DialogStyleDark</item>
    </style>

    <style name="DialogStyleDark">
        <item name="dialogBackground">@drawable/sdl_background_dark</item>
        <item name="titleTextColor">@color/sdl_title_text_dark</item>
        <item name="titleSeparatorColor">@color/sdl_title_separator_dark</item>
        <item name="messageTextColor">@color/sdl_message_text_dark</item>
        <item name="buttonTextColor">@color/sdl_button_text_dark</item>
        <item name="buttonSeparatorColor">@color/sdl_button_separator_dark</item>
        <item name="buttonBackgroundColorNormal">@color/sdl_button_normal_dark</item>
        <item name="buttonBackgroundColorPressed">@color/sdl_button_pressed_dark</item>
        <item name="buttonBackgroundColorFocused">@color/sdl_button_focused_dark</item>
    </style>

    <style name="ShareDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="SwipeBackLayout">
        <item name="edge_size">50dip</item>
        <item name="shadow_left">@drawable/shadow_left</item>
        <item name="shadow_right">@drawable/shadow_right</item>
        <item name="shadow_bottom">@drawable/shadow_bottom</item>
    </style>

    <style name="menu_textview">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/menu_textview_sel</item>
        <item name="android:textSize">18dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginLeft">@dimen/menu_item_padding_left_inner</item>
    </style>

    <style name="menu_imageview">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/menu_item_padding_left</item>
    </style>

    <style name="menu_item_ll">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/menu_item_height</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="setting_btn">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textColor">#4c4c4c</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="setting_divider">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/setting_divider</item>
    </style>

    <style name="account_edittext">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/et_account_round_bg</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>

    <style name="password_edittext">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/et_account_round_bg</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:password">true</item>
    </style>

    <style name="sure_btn">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_password_round_bg</item>
    </style>

    <style name="room_control_small_textview">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#7f7f7f</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="room_control_round_button">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">52dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:textColor">@color/room_control_tv_model_text_color_sel</item>
        <item name="android:textSize">24sp</item>
        <item name="android:background">@drawable/room_control_tv_control_round_btn_sel</item>
    </style>

    <style name="room_control_digital_button">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">55dp</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:textColor">@color/room_control_tv_digital_text_color_sel</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/room_control_tv_control_digital_btn_sel</item>
    </style>

    <style name="room_control_air_conditon_circle_button">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">3dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/room_control_tv_control_digital_btn_sel</item>
    </style>

    <style name="room_control_air_conditon_circle_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="playzmax_login_edittext">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#a0a09f</item>
        <item name="android:textColorHint">#a0a09f</item>
        <item name="android:textSize">14sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
	    <item name="android:maxLength">16</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:background">@drawable/playzmax_login_et_bg</item>
    </style>

	<style name="playzmax_login_dropdown_spinner_item">
		<item name="android:layout_gravity">center_horizontal</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">#a0a09f</item>
		<item name="android:textColorHint">#a0a09f</item>
		<item name="android:textSize">14sp</item>
		<item name="android:ellipsize">end</item>
		<item name="android:maxLength">16</item>
		<item name="android:singleLine">true</item>
		<item name="android:layout_marginRight">45dp</item>
		<item name="android:layout_marginLeft">45dp</item>
		<item name="android:paddingLeft">25dp</item>
		<item name="android:background">@color/red</item>
	</style>

    <style name="playzmax_login_sucess_textview">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#4b4b4b</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Theme_Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
	<style name="DialogAnimation" parent="@android:style/Animation.Dialog">
		<item name="android:windowEnterAnimation">@anim/slid_up</item>
		<item name="android:windowExitAnimation">@anim/slid_down</item>
	</style>

	<style name="AppDialog_Bottom" parent="android:Theme.Dialog">
		<item name="android:windowFrame">@null</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowIsFloating">true</item>
		<item name="android:backgroundDimEnabled">true</item>
		<item name="android:windowAnimationStyle">@style/DialogAnimation</item>
		<item name="android:windowBackground">@color/calendar_bg</item>
	</style>
</resources>
