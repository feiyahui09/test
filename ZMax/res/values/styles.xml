<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="ShareDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/dis_error</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="SwipeBackLayout">
        <item name="edge_size">50dip</item>
        <item name="shadow_left">@drawable/shadow_left</item>
        <item name="shadow_right">@drawable/shadow_right</item>
        <item name="shadow_bottom">@drawable/shadow_bottom</item>
    </style>

    <style name="menu_textview">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/menu_textview_sel</item>
        <item name="android:textSize">18dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginLeft">@dimen/menu_item_padding_left_inner</item>
    </style>

    <style name="menu_imageview">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/menu_item_padding_left</item>
    </style>

    <style name="menu_item_ll">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/menu_item_height</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="setting_btn">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="account_edittext">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/et_account_round_bg</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>

    <style name="password_edittext">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/et_account_round_bg</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:password">true</item>
    </style>

    <style name="sure_btn">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_password_round_bg</item>
    </style>

    <style name="room_control_small_textview">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#7f7f7f</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="room_control_round_button">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/room_control_tv_model_text_color_sel</item>
        <item name="android:textSize">24sp</item>
        <item name="android:background">@drawable/room_control_tv_control_round_btn_sel</item>
    </style>

    <style name="room_control_digital_button">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">55dp</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:textColor">@color/room_control_tv_digital_text_color_sel</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/room_control_tv_control_digital_btn_sel</item>
    </style>

    <style name="room_control_lighting_model_button">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textColor">#737373</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/room_control_lighting_control_btn_sel</item>
    </style>

</resources>