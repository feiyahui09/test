<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
		>

	<ImageView
			android:id="@+id/iv_img"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:scaleType="fitXY"
			>
	</ImageView>

	<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="@dimen/index_hotel_book_item_size"
			android:background="@drawable/hotel_book_item_top_tri_bg"
			>

		<TextView
				android:id="@+id/tv_book"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:minHeight="100dp"
				android:minWidth="100dp"
				android:text="预订"
				android:textSize="25dp"
				android:gravity="center"
				android:textColor="@color/lightblue"
				android:layout_centerHorizontal="true"
				android:layout_alignParentBottom="true"
				/>
	</RelativeLayout>

	<TextView
			android:id="@+id/tv_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="@dimen/hotel_book_title_marginTop"
			android:text="zmax酒店"
			android:textColor="@color/hotel_list_tile"
			android:textSize="18sp"
			/>

</RelativeLayout>
