<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="@dimen/act_detail_index_margin_left"
        android:layout_marginRight="@dimen/act_detail_index_margin_left"
        android:layout_marginTop="@dimen/act_detail_index_margin_top"
        android:background="@drawable/act_detial_envelope_bg"
        android:orientation="vertical"
        android:paddingLeft="@dimen/act_detail_third_inner_margin_left"
        android:paddingRight="@dimen/act_detail_third_inner_margin_left"
        android:paddingTop="@dimen/act_detail_third_inner_margin_top" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/act_detail_third_img_height" >

            <ImageView
                android:id="@+id/iv_act_detail_index_img"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="fitXY"
                android:src="@drawable/act_detail_icon_test" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/act_detial_photo_lt" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/act_detial_photo_rb" />
        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/act_detial_photo_bottom" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/act_detail_second_title_margin_bottom"
            android:layout_marginTop="@dimen/act_detail_second_title_margin_top"
            android:text="冲动是扑街"
            android:textColor="#595959"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="冲动是扑街冲动是扑街冲动是扑街冲动是扑街冲动是扑街冲动是扑街冲动是扑街冲动是扑街冲动是扑街冲动是扑街冲动是扑街冲动是扑街冲动是扑街冲动是扑街冲动是扑街冲动是扑街冲动是扑街冲动是扑街冲动是扑街冲动是扑街冲动是扑街冲动是扑街冲动是扑街"
            android:textColor="#595959"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>