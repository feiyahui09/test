<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:id="@+id/scroller"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_head_img"
                android:layout_width="match_parent"
                android:layout_height="200dp"
               >
            </ImageView>

            <LinearLayout
                android:id="@+id/ll_act_calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="活动日历"
                    android:textSize="25dp" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地址-百度地图"
                    android:textSize="25dp" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电话-"
                    android:textSize="25dp" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_hotel_facility"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="显示可提供服务"
                    android:textSize="20dp" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                 android:id="@+id/ll_date_pick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择入住时间"
                    android:textSize="25dp" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_room_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="房间类型列表--（点击翻转）"
                    android:textSize="17dp" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                 android:id="@+id/ll_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评价-》评价列表"
                    android:textSize="17dp" >
                </TextView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/detail_header" >
    </include>

</FrameLayout>