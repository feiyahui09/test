<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:paddingBottom="68dp">

    <ImageView
        android:id="@+id/iv_big_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="107dp"
        android:scaleType="center" />

    <ImageView
        android:id="@+id/iv_shawdow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_big_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@drawable/room_control_above_shadow" />

    <TextView
        android:id="@+id/tv_mode_tile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_shawdow"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:text="灯光模式"
        android:textColor="#5d5d5d"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tv_mode_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_mode_tile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="当前灯光模式：明亮模式"
        android:textColor="#5d5d5d"
        android:textSize="14sp" />

 

</RelativeLayout>