<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/default_bg_repeat"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="13dp"
    android:paddingRight="13dp"
    android:paddingTop="23dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/playzmax_login_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:paddingTop="15dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:background="@drawable/playzmax_login_logo" />

        <Spinner
            android:id="@+id/sp_hotels"
            style="@style/playzmax_login_edittext"
            android:background="@drawable/playzmax_login_spinner_bg"
            android:drawSelectorOnTop="false"
            android:paddingLeft="0dp"
            android:visibility="visible" />

        <EditText
            android:id="@+id/et_room_number"
            style="@style/playzmax_login_edittext"
            android:layout_marginTop="@dimen/play_login_et_marginTop"
            android:hint="房间号"
            android:textCursorDrawable="@null" />

        <EditText
            android:id="@+id/et_namecard"
            style="@style/playzmax_login_edittext"
            android:layout_marginTop="@dimen/play_login_et_marginTop"
            android:hint="身份证号"
            android:maxLength="18"
            android:inputType="number"
            android:textCursorDrawable="@null" />

        <EditText
            android:id="@+id/et_password"
            style="@style/playzmax_login_edittext"
            android:layout_marginTop="@dimen/play_login_et_marginTop"
            android:hint="密码"
            android:password="true"
            android:visibility="gone"
            android:textCursorDrawable="@null" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/play_login_btn_marginTop"
            android:background="@drawable/playzmax_login_btn_sel"
            android:text="酒店授权"
            android:textColor="#434343"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/play_login_bottom_logo_marginTop"
        android:background="@drawable/playzmax_login_bottom_logo_bg" />

</LinearLayout>
