<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/above_content_header"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/top_heigth"
    android:background="@drawable/top_bg" >

    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="@drawable/top_back_sel"
        android:drawableRight="@drawable/top_vert_divider" >
    </Button>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/feedback_send_btn"
        android:drawableLeft="@drawable/top_vert_divider" >
    </Button>

</RelativeLayout>