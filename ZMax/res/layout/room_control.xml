<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/default_bg_repeat" >

    <com.zmax.app.widget.SmartViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </com.zmax.app.widget.SmartViewPager>

    <include layout="@layout/detail_header" />

    <ImageView
        android:id="@+id/iv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="17dp"
        android:layout_marginTop="233dp"
        android:background="@drawable/room_control_indicator_right"
        android:scaleType="center"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="233dp"
        android:background="@drawable/room_control_indicator_left"
        android:scaleType="center"
        android:visibility="gone" />

</RelativeLayout>